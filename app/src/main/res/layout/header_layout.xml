<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!--import class BindingUtils-->
        <!--<import type="info.androidhive.databinding.utils.BindingUtils" />-->

        <!--<import type="android.view.View"/>-->

        <!--<variable-->
        <!--name="viewModel"-->
        <!--type="com.conghuy.phim.model.CommonModel" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btnHome"
            style="@style/header_menu"
            android:layout_gravity="center">

            <ImageView
                style="@style/iv_common"
                android:layout_gravity="center"
                android:src="@drawable/baseline_home_black_24" />
        </FrameLayout>

        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Enter..."
            android:imeOptions="actionGo"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/btnMenu"
            style="@style/header_menu"
            android:layout_gravity="center">

            <ImageView
                style="@style/iv_common"
                android:layout_gravity="center"
                android:src="@drawable/baseline_more_vert_black_24" />
        </FrameLayout>
    </LinearLayout>
</layout>